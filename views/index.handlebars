<h1>Burger Logger</h1>

<ul>
    {{#each burgers}}
    <li>
        <p>id: {{this.id}} burger: {{this.burger}}</p>
        <button type="submit">Devour It!</button>
    </li>
    {{/each}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="burger"></textarea>

	<button type="submit">Submit</button>
</form>